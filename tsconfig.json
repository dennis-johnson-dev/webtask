{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "es2016", "es2017"],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": false,
    "module": "es2015",
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es5"
  },
  "include": ["index.ts", "./lib/**/*.ts", "./test/**/*.ts"],
  "compileOnSave": false
}
